@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/registration.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/main.css" rel="stylesheet" asp-append-version="true">
    <title>Create Account | OnShelfGTDL</title>


    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
        }

    </style>
</head>
<body>
    <div class="registration-container">
        <!-- Left Panel: Logo Background -->
        <div class="left-panel"></div>

        <!-- Right Panel: Registration Form -->
        <div class="right-panel">
            <div class="form-wrapper">
                <h3 class="text-center mb-3 fw-bold text-dark">Let’s create your account</h3>

                <div class="text-center mb-4 fs-7">
                    @* <span>as</span> *@
                    <div class="btn-group ms-2" role="group">
                        <input type="radio" class="btn-check" name="userType" id="student" autocomplete="off" checked>
                        <label class="btn btn-primary fw-bold px-4" for="student">Student</label>

                        <input type="radio" class="btn-check" name="userType" id="teacher" autocomplete="off">
                        <label class="btn btn-primary fw-bold px-4" for="teacher">Teacher</label>
                    </div>
                </div>

                <form method="post" id="registrationForm" asp-action="Register">
                    <div class="row mb-3 fs-7">
                        <label>What is your name?</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" placeholder="Firstname" id="firstName" name="FirstName" required />
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" placeholder="Middlename" id="middleName" name="MiddleName" />
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Lastname" id="lastName" name="LastName" required />
                        </div>
                        <div class="col-md-2">
                            <select id="suffix" name="Suffix" class="form-select">
                                <option value=""></option>
                                <option value="Jr">Jr</option>
                                <option value="Sr">Sr</option>
                                <option value="III">III</option>
                                <option value="IV">IV</option>
                                <option value="V">V</option>
                                <option value="VI">VI</option>
                                <option value="VII">VII</option>
                                <option value="VIII">VIII</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3 fs-7">
                        <div class="col-md-4">
                            <label id="lrnLabel">Learner’s Registered Number</label>
                            <input type="text" class="form-control" id="lrnInput" placeholder="LRN" id="lrn" name="LRN" required />
                        </div>

                        <div class="col-md-4">
                            <label id="GradeLabel">Grade</label>
                            <input type="text" class="form-control" id="GradeInput" placeholder="Grade" id="grade" name="Grade" required />
                        </div>
                        <div class="col-md-4">
                            <label>Section</label>
                            <input type="text" class="form-control" placeholder="Section" id="section" name="Section" required />
                        </div>
                    </div>

                    <div class="row mb-3 fs-7">
                        <div class="col-md-6">
                            <label>Adviser Name</label>
                            <input type="text" class="form-control" placeholder="Adviser" id="adviserName" name="Adviser" />
                        </div>
                        <div class="col-md-6">
                            <label>Address</label>
                            <input type="text" class="form-control" placeholder="Address" id="address" name="Address" required />
                        </div>
                    </div>

                    <div class="row mb-3 fs-7">
                        <div class="col-md-6">
                            <label>Email Address</label>
                            <input type="email" class="form-control" placeholder="Email Address" id="emailAddress" name="Email" required />
                        </div>
                        <div class="col-md-6">
                            <label>Mobile Number</label>
                            <input type="text" class="form-control" placeholder="Mobile Number" id="mobileNumber" name="MobileNumber" required />
                        </div>
                    </div>

                    <div class="row mb-3 fs-7">
                        <div class="col-md-6">
                            <label>Password</label>
                            <div class="flex-grow-1 position-relative">
                                <input type="password" class="form-control" placeholder="Password" id="password" name="Password" required />
                                <span id="passIcon" class="position-absolute top-50 end-0 translate-middle-y me-2"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Confirm Password</label>
                            <div class="flex-grow-1 position-relative">
                                <input type="password" class="form-control" placeholder="Confirm Password" id="confirmPassword" name="ConfirmPassword" required />
                                <span id="confirmPassIcon" class="position-absolute top-50 end-0 translate-middle-y me-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div id="passwordRequirements" class="small text-muted ms-2 mt-2 fs-7 mb-3">
                            <ul class="mb-0">
                                <li id="charLength" class="text-danger">At least 8 characters</li>
                                <li id="upperCase" class="text-danger">At least 1 uppercase letter</li>
                                <li id="numberCheck" class="text-danger">At least 1 number</li>
                                <li id="specialChar" class="text-danger">At least 1 special character</li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="privacyPolicy" required>
                        <label class="form-check-label" for="privacyPolicy">
                            I accept the <a href="#">Privacy Policy</a>
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="termsConditions" required>
                        <label class="form-check-label" for="termsConditions">
                            I accept the <a href="#">Terms & Condition</a>
                        </label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Create an Account</button>
                    </div>

                    <div class="text-center mt-3 fs-7">
                        <span>Already have an account? <a href="/Account/Login">Login</a></span>
                    </div>
                </form> 
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/js/jquery-3.3.6.0.min.js"></script>
    <script src="~/js/registration.js"></script>
</body>
</html>
