@model List<OnShelfGTDL.Models.UserViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Teacher";
}

<div>
    <div class="container-pad"></div>
    <div class="container-page mt-4">

        <!-- Table Section -->
        <div class="container bg-main fs-7">

            <div class="card-search p-3 mb-3 flex-fill">
                <div class="row">
                    <div class="d-flex align-items-center fs-7">
                        <input type="text" id="searchBar" class="form-control fs-7" style="width: 300px;" placeholder="Search">
                        <div class="btn-group me-2" role="group" aria-label="Main actions">
                            <button class="btn btn-primary ms-2" id="btnNew">
                                <img src="~/images/add-user.png" alt="add-user" style="width: 16px; height: 16px;" />
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Table -->
            <div class="card-table p-3 mb-3 flex-fill">
                <div class="row">
                    <div class="table-responsive fs-7 mt-1" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-hover table-bordered text-center align-middle " id="userTable" +>
                            <thead class="table-light fs-7">
                                <tr>
                                    <th>Employee No</th>
                                    <th>Member Type</th>
                                    <th>Name</th>
                                    @* <th>Firstname</th>
                                        <th>Middlename</th>
                                        <th>Lastname</th>
                                        <th>Suffix</th> *@
                                    <th>Address</th>
                                    <th>Email Address</th>
                                    <th>Mobile No.</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="fs-7">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Form Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content fs-7" style="background-color: #FFE4E1;">
            <div class="modal-body">
                <form id="userForm">
                    <div class="row g-3">
                        <!-- Right Column: User Info Form -->
                        <div class="col-md-12 fs-7 fw-semibold">
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Left Fields -->
                                    <div class="mb-2">
                                        <label for="userId" class="form-label">User ID</label>
                                        <input asp-for="UserId" id="userId" class="form-control" required />
                                    </div>
                                    <div class="mb-2">
                                        <label for="memberType" class="form-label">Member Type</label>
                                        <select asp-for="MemberType" id="memberType" class="form-select" required>
                                            <option value=""></option>
                                            <option value="Administrator">Administrator</option>
                                            <option value="Teacher">Teacher</option>
                                        </select>
                                    </div>
                                    <div class="mb-2">
                                        <label for="firstName" class="form-label">First Name</label>
                                        <input asp-for="FirstName" id="firstName" class="form-control" required />
                                    </div>
                                    <div class="mb-2">
                                        <label for="middleName" class="form-label">Middle Name</label>
                                        <input asp-for="MiddleName" id="middleName" class="form-control" required />
                                    </div>
                                    <div class="mb-2">
                                        <label for="lastName" class="form-label">Last Name</label>
                                        <input asp-for="LastName" id="lastName" class="form-control" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <!-- Right Fields -->
                                    <div class="mb-2">
                                        <label for="suffix" class="form-label">Suffix</label>
                                        <select asp-for="Suffix" id="suffix" class="form-select">
                                            <option value=""></option>
                                            <option value="Jr">Jr</option>
                                            <option value="Sr">Sr</option>
                                            <option value="III">III</option>
                                            <option value="IV">IV</option>
                                            <option value="V">V</option>
                                            <option value="VI">VI</option>
                                            <option value="VII">VII</option>
                                            <option value="VIII">VIII</option>
                                            <option value="VIIII">VIIII</option>
                                            <option value="X">X</option>
                                        </select>
                                    </div>
                                    <div class="mb-2">
                                        <label for="address" class="form-label">Address</label>
                                        <textarea asp-for="Address" id="address" class="form-control" rows="3" style="resize: none;"></textarea>
                                    </div>
                                    <div class="mb-2">
                                        <label for="emailAddress" class="form-label">Email Address</label>
                                        <input asp-for="EmailAddress" id="emailAddress" class="form-control" type="email" />
                                    </div>
                                    <div class="mb-2">
                                        <label for="mobileNumber" class="form-label">Mobile Number</label>
                                        <input asp-for="MobileNumber" id="mobileNumber" class="form-control" type="tel" />
                                    </div>
                                    <div class="mb-2">
                                        <label for="status" class="form-label">Status</label>
                                        <select asp-for="Status" id="status" class="form-select">
                                            <option value=""></option>
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveUser">Save</button>
            </div>
        </div>
    </div>
</div>



@Html.Partial("_CustomAlert")
@Html.Partial("_ConfirmModal")

<script src="~/js/jquery-3.3.6.0.min.js"></script>
<script src="~/js/ManageTeacher.js"></script>