@{
    ViewData["Title"] = "Verify Email";
    string email = ViewBag.Email as string ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gen Tiburcio Library Youth</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            background: url('/images/library-logo-bg.png') no-repeat center center;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
        }

        .verify-container {
            max-width: 400px;
            margin: 100px auto;
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .digit-box input {
            width: 40px;
            height: 50px;
            font-size: 24px;
            text-align: center;
            margin: 0 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .verify-btn {
            background-color: #a5416f;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            margin-top: 20px;
        }

        .resend {
            margin-top: 10px;
            font-size: 14px;
        }

            .resend a {
                color: #a5416f;
                text-decoration: none;
                font-weight: 600;
                cursor: pointer;
            }

        .status-message {
            margin-top: 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="verify-container">
        <h4 class="fw-bold">Verify your email</h4>
        <p class="text-muted">Please enter the 6-digit code sent to <strong>@email</strong></p>

        <form id="verifyForm">
            <input type="hidden" id="email" name="email" value="@email" />

            <div class="digit-box d-flex justify-content-center" id="Otp">
                @for (int i = 0; i < 6; i++)
                {
                    <input type="text" class="otp-input" maxlength="1" required />
                }
            </div>

            <button type="submit" class="verify-btn">Verify</button>
        </form>

        <div class="resend">
            Didn't receive the code? <a id="resendOtpBtn">Resend</a>
        </div>

        <div class="status-message text-danger fw-bold" id="statusMessage"></div>
    </div>

    <script>
        $(document).ready(function () {
            // Focus on next input after typing
            $(".otp-input").on("input", function () {
                if (this.value.length === 1) {
                    $(this).next('.otp-input').focus();
                }
            });

            // Handle OTP submit
            $("#verifyForm").on("submit", function (e) {
                e.preventDefault();

                let otp = "";
                $(".otp-input").each(function () {
                    otp += $(this).val();
                });

                let email = $("#email").val();

                $.post('/Account/VerifyOtp', { email: email, otp: otp }, function (res) {
                    $("#statusMessage").text(res.message).css("color", res.success ? "green" : "red");

                    if (res.success) {
                        setTimeout(function () {
                            window.location.href = "/Account/Login";
                        }, 1500);
                    }
                });
            });

            // Handle resend
            $("#resendOtpBtn").on("click", function () {
                let email = $("#email").val();

                $.post('/Account/ResendOtp', { email: email }, function (res) {
                    $("#statusMessage").text(res.message).css("color", res.success ? "green" : "red");
                });
            });
        });
    </script>
</body>
</html>
