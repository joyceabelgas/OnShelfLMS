@model List<OnShelfGTDL.Models.EBook>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "E-Book Gallery";
    var categoryTitle = ViewBag.Category ?? "Books";
}

<div>

    <div class="container-pad"></div>
    <div class="container-page mt-4">
        
        <div class="mx-3 mb-3 d-flex justify-content-between align-items-center fs-7">
            <span class="booktitle fw-bold fs-5 ">@categoryTitle</span>
            <input type="text" id="searchBar" class="form-control d-inline-block searchBar" placeholder="Search">
        </div>

        <!-- Scrollable content section -->
        <div class="book-gallery-scroll">
            <div class="row row-cols-1 row-cols-md-5 g-4">
                @foreach (var book in Model)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card shadow-sm mx-auto p-2 text-center book-card fs-7"
                             data-bs-toggle="modal"
                             data-bs-target="#bookModal"
                             data-isbn="@book.EbookID"
                             data-title="@book.Title"
                             data-author="@book.Category"
                             data-copyright="@book.Authors"
                             data-category="@book.Description"
                             data-image="data:image/jpeg;base64,@(book.CoverImage != null ? Convert.ToBase64String(book.CoverImage) : "")">

                            <img src="data:image/jpeg;base64,@(book.CoverImage != null ? Convert.ToBase64String(book.CoverImage) : "")"
                                 class="card-img book-img" alt="Book Image" />

                            <div class="card-body fs-7">
                                <h6 class="card-title">@book.Category</h6>
                                <p style="display:none;" class="card-subtitle">ISBN: @book.EbookID</p>
                                <p class="card-text">By @book.Authors</p>
                                <p style="display:none;"  class="card-text"></p>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Book Modal -->
<div class="modal fade" id="bookModal" tabindex="-1" aria-labelledby="bookModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-3" style="border-radius: 10px; border: 1px solid #f2c8d0;">
            <div class="modal-body d-flex gap-3">

                <img id="modalBookImage" src="" alt="Book Cover" class="img-fluid rounded" style="width: 150px; height: 210px; object-fit: cover;">

                <div>
                    <h5 id="modalBookTitle" class="fw-bold mb-1"></h5>
                    <p id="modalBookAuthor" class="text-muted mb-2"></p>
                    <p id="modalBookDescription" class="text-secondary small" style="text-align: justify;"></p>

                    <div class="mt-3">
                        <button id="readOnline" class="btn btn-primary btn-sm">
                            Read
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>




@Html.Partial("_CustomAlert") 

<script src="~/js/jquery-3.3.6.0.min.js"></script>
<script src="~/js/EBookList.js"></script>
