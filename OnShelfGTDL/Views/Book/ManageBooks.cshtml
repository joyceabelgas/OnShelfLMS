@model List<OnShelfGTDL.Models.BookModelView>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Books";
}

<div>
    <div class="container-pad">
    </div>
    <div class="container-page mt-4">
        <!-- Table Section -->
        <div class="container bg-main fs-7">

            <div class="card-search p-3 mb-3 flex-fill">
                <div class="row">
                    <div class="d-flex align-items-center fs-7">
                        <input type="text" id="searchBar" class="form-control fs-7" style="width: 300px;" placeholder="Search">
                        <div class="btn-group me-2" role="group" aria-label="Main actions">
                            <button class="btn btn-primary ms-2" id="btnNew">
                                <img src="~/images/add-book.png" alt="add-book" style="width: 16px; height: 16px;" />
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Table -->
            <div class="card-table p-3 mb-3 flex-fill">
                <div class="row">
                    <div class="table-responsive fs-7 mt-1" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-hover table-bordered text-center align-middle " id="userTable" style="table-layout: fixed;">
                            <thead class="table-light fs-7">
                                <tr>
                                    <th>ISBN</th>
                                    <th>Book Name</th>
                                    <th>Category</th>
                                    <th>Authors Name</th>
                                    <th>Book Shelf</th>
                                    <th>Copyright</th>
                                    <th>Stock Qty</th>
                                    <th>Publication Name</th>
                                    <th width="200">Description</th>
                                    <th>CreatedBy</th>
                                    <th>Created Date</th>
                                    @* <th>Book Image</th> *@
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="fs-7" id="bookTableBody">
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



<!-- User Form Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content fs-7" style="background-color: #FFE4E1;">
            <div class="modal-body">
                <form id="userForm">
                    <div class="row g-3">

                        <!-- Left Column: Image Upload & Barcode -->
                        <div class="col-md-3 d-flex flex-column align-items-center">
                            <!-- Profile Picture Preview -->
                            <div id="booksPreview" class="border mb-2 overflow-hidden"
                                 style="width: 150px; height: 150px; background-color: #fff;">
                                <img id="booksPicture" src="/images/default-book.png" alt="Book Image"
                                     style="width: 100%; height: 100%; object-fit: cover;" />
                            </div>

                            <!-- File Upload Input -->
                            <input asp-for="BooksImage" type="file" id="bookImage" class="form-control mb-2" accept="image/*" />

                        </div>

                        <!-- Right Column: User Info Form -->
                        <div class="col-md-9 fs-7 fw-semibold">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <label for="ISNB" class="form-label me-2" style="width: 100px;">ISBN</label>
                                        <input asp-for="ISNB" id="isnb" class="form-control" />
                                    </div>

                                    <div class="d-flex align-items-center mb-2">
                                        <label for="BookShelf" class="form-label me-2" style="width: 100px;">Book Shelf</label>
                                        <select asp-for="BookShelf" id="bookShelf" class="form-select">
                                            <option value=""></option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div>

                                    <div class="d-flex align-items-center mb-2">
                                        <label for="BookName" class="form-label me-2" style="width: 100px;">Book Name</label>
                                        <input asp-for="BookName" id="bookName" class="form-control" />
                                    </div>

                                    <div class="d-flex align-items-center mb-2">
                                        <label for="Copyright" class="form-label me-2" style="width: 100px;">Copyright</label>
                                        <input asp-for="Copyright" id="copyright" class="form-control" />
                                    </div>

                                    <div class="d-flex align-items-center mb-2">
                                        <label for="StockQuantity" class="form-label me-2" style="width: 100px;">Stock Quantity</label>
                                        <input type="number" asp-for="StockQuantity" id="stockQuantity" class="form-control" />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <label for="Category" class="form-label me-2" style="width: 100px;">Category</label>
                                        <select asp-for="Category" id="category" class="form-select">
                                            <option value=""></option>
                                            <option value="Science">Science</option>
                                            <option value="Social Science">Social Science</option>
                                            <option value="English">English</option>
                                            <option value="Mathematics">Mathematics</option>
                                            <option value="Fiction">Fiction</option>
                                            <option value="Mapeh">Mapeh</option>
                                            <option value="General Education">General Education</option>
                                            <option value="PRVE">PRVE</option>
                                            <option value="TLE">TLE</option>
                                            <option value="Filipino">Filipino</option>
                                        </select>
                                    </div>

                                    <div class="d-flex align-items-center mb-2">
                                        <label for="AuthorsName" class="form-label me-2" style="width: 100px;">Authors Name</label>
                                        <input asp-for="AuthorsName" id="authorsName" class="form-control" />
                                    </div>

                                    <div class="d-flex align-items-center mb-2">
                                        <label for="PublicationName" class="form-label me-2" style="width: 100px;">Publication Name</label>
                                        <input asp-for="PublicationName" id="publicationName" class="form-control" />
                                    </div>


                                    <div class="d-flex align-items-center mb-2">
                                        <label for="Description" class="form-label me-2" style="width: 100px;">Description</label>
                                        <textarea asp-for="Description" id="description" class="form-control" rows="3" style="resize: none;"></textarea>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveUser">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ebookModal" tabindex="-1" aria-labelledby="ebookModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content fs-7" style="background-color: #FFE4E1;">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="ebookModalLabel">Add E-Book</h5>
            </div>

            <div class="modal-body">
                <form id="ebookForm" enctype="multipart/form-data">
                    <div class="row g-3">

                        <!-- Left Column: E-Book Cover Image -->
                        <div class="col-md-3 d-flex flex-column align-items-center">
                            <div id="ebookCoverPreview" class="border mb-2 overflow-hidden"
                                 style="width: 150px; height: 200px; background-color: #fff;">
                                <img id="ebookCover" src="/images/default-book.png" alt="E-Book Cover"
                                     style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <label for="ebookCoverImage" class="form-label">E-Book Cover Image</label>
                            <input type="file" id="ebookCoverImage" class="form-control mb-2" accept="image/*" />
                        </div>

                        <!-- Right Column: E-Book Info -->
                        <div class="col-md-9 fs-7 fw-semibold">
                            <div class="row">
                                <div class="col-md-12 mb-2">
                                    <label for="ebookFile" class="form-label">E-Book File <span class="text-danger">*</span></label>
                                    <input type="file" id="ebookFile" class="form-control" accept="application/pdf" required />
                                    <small class="text-danger">*accepts only PDF File</small>
                                </div>

                                <div class="col-md-6 mb-2">
                                    <label for="ebookTitle" class="form-label">Title</label>
                                    <input type="text" id="ebookTitle" class="form-control" required />
                                </div>

                                <div class="col-md-6 mb-2">
                                    <label for="ebookCategory" class="form-label">Category</label>
                                    <select id="ebookCategory" class="form-select" required>
                                        <option value="">Select Category</option>
                                        <option value="Science">Science</option>
                                        <option value="Social Science">Social Science</option>
                                        <option value="English">English</option>
                                        <option value="Mathematics">Mathematics</option>
                                        <option value="Fiction">Fiction</option>
                                        <option value="Mapeh">Mapeh</option>
                                        <option value="General Education">General Education</option>
                                        <option value="PRVE">PRVE</option>
                                        <option value="TLE">TLE</option>
                                        <option value="Filipino">Filipino</option>
                                    </select>
                                </div>

                                <div class="col-md-12 mb-2">
                                    <label for="ebookAuthors" class="form-label">Authors</label>
                                    <input type="text" id="ebookAuthors" class="form-control" />
                                </div>

                                <div class="col-md-12 mb-2">
                                    <label for="ebookDescription" class="form-label">Descriptions</label>
                                    <textarea id="ebookDescription" class="form-control" rows="3" style="resize: none;"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSaveEbook">Save</button>
            </div>
        </div>
    </div>
</div>




@Html.Partial("_CustomAlert")
@Html.Partial("_ConfirmModal")


<script src="~/js/jquery-3.3.6.0.min.js"></script>
<script src="~/js/ManageBooks.js"></script>