@using OnShelfGTDL.Models
@model List<UserViewModel>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <h2 class="fw-bold">Manage Users</h2>
    <div class="btn-toolbar mb-3">
        <button class="btn btn-primary">NEW</button>
        <button class="btn btn-secondary">EDIT</button>
        <button class="btn btn-secondary">CANCEL</button>
        <button class="btn btn-info">EXPORT DATA</button>
        <button class="btn btn-secondary" disabled>UPLOAD</button>
        <button class="btn btn-primary">ACCESS RIGHTS</button>
    </div>

    <div class="row g-3">
        <div class="col-md-3">
            <label>User ID</label>
            <input type="text" class="form-control">
        </div>
        <div class="col-md-3">
            <label>Suffix</label>
            <select class="form-select">
                <option>Select</option>
            </select>
        </div>
        <div class="col-md-3">
            <label>Member Type</label>
            <select class="form-select">
                <option>Select</option>
            </select>
        </div>
        <div class="col-md-3">
            <label>Address</label>
            <input type="text" class="form-control">
        </div>
        <div class="col-md-3">
            <label>First Name</label>
            <input type="text" class="form-control">
        </div>
        <div class="col-md-3">
            <label>Email Address</label>
            <input type="email" class="form-control">
        </div>
        <div class="col-md-3">
            <label>Middle Name</label>
            <input type="text" class="form-control">
        </div>
        <div class="col-md-3">
            <label>Mobile No</label>
            <input type="text" class="form-control">
        </div>
        <div class="col-md-3">
            <label>Last Name</label>
            <input type="text" class="form-control">
        </div>
        <div class="col-md-3">
            <label>Status</label>
            <select class="form-select">
                <option>Select</option>
            </select>
        </div>
    </div>

    <div class="mt-4">
        <label>Search</label>
        <input type="text" class="form-control mb-3">
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>User ID</th>
                <th>Member Type</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Suffix</th>
                <th>Address</th>
                <th>Email Address</th>
                <th>Mobile No</th>
                <th>Status</th>
                <th>Created By</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.MemberType</td>
                    <td>@user.FirstName</td>
                    <td>@user.MiddleName</td>
                    <td>@user.LastName</td>
                    <td>@user.Suffix</td>
                    <td>@user.Address</td>
                    <td>@user.Email</td>
                    <td>@user.MobileNo</td>
                    <td>@user.Status</td>
                    <td>@user.CreatedBy</td>
                    <td>@user.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>
