@model List<OnShelfGTDL.Models.BorrowedBookWithFinesModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Users";
}
<div>
    <div class="container-pad">
    </div>
    <div class="container-page mt-3">
        <!-- Search and Filter Section -->
        <div class="card-search p-3 mb-3 flex-fill">
            <div class="row fs-7">
                <div class="row fs-7">
                    <div class="col-md-2">
                        <div class="d-flex justify-content-start mb-3">
                            <select class="form-select me-2" id="cmbFilter">
                                <option>Filter</option>
                                <option>Unpaid</option>
                                <option>Paid</option>
                            </select>
                        </div>
                    </div>

                </div>
                <div class="row fs-7">
                    <div class="col-md-4">
                        <div class="d-flex justify-content-start">
                            <input type="text" class="form-control me-2" placeholder="Search" id="searchBar">
                        </div>
                    </div>
                </div>
            </div>
        </div>
       

        <!-- Data Table -->
        <div class="card-table p-3 mb-3 flex-fill">
            <div class="row">
                <div class="table-responsive fs-7" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-hover table-bordered text-center align-middle" id="userTable">
                        <thead class="table-light fs-7">
                            <tr>
                                <th style="display:none;">ID</th>
                                <th>Name</th>
                                <th>ISBN</th>
                                <th>TotalFines</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@Html.Partial("_CustomAlert")
@Html.Partial("_ConfirmModal")

<script src="~/js/jquery-3.3.6.0.min.js"></script>
<script src="~/js/fine.js"></script>
